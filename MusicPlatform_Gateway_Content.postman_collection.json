    {
      "name": "Artists - list (filter/search)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
              "try {",
              "  const json = pm.response.json();",
              "  if (json && json.items && json.items.length > 0 && json.items[0].id) {",
              "    pm.environment.set('artistId', json.items[0].id);",
              "  }",
              "} catch (e) {}"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/content/artists?page=1&limit=20&genre=&q=",
